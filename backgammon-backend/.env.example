# =============================================
# Backgammon Club Backend - Environment Variables
# =============================================
# Copy this file to .env and update the values

# ==================== SERVER ====================
PORT=8000
NODE_ENV=development  # development | production

# ==================== DATABASE ====================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/backgammon_club

# ==================== REDIS (Optional) ====================
# Used for caching and session storage
REDIS_URL=redis://localhost:6379

# ==================== JWT SECRETS ====================
# IMPORTANT: Generate secure secrets for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_64_character_secret_here
JWT_REFRESH_SECRET=your_64_character_secret_here

# Token expiration times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== CORS ====================
# Allowed origins for CORS (comma-separated for multiple)
# Use * for development, specific domains for production
CORS_ORIGIN=*

# ==================== STRIPE ====================
# For in-app purchases
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== RATE LIMITING ====================
# Maximum requests per IP per window
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# ==================== LOGGING ====================
LOG_LEVEL=info  # error | warn | info | debug

# ==================== PRODUCTION ONLY ====================
# SSL certificates (if not using reverse proxy)
# SSL_KEY_PATH=/path/to/privkey.pem
# SSL_CERT_PATH=/path/to/fullchain.pem

# Error monitoring (e.g., Sentry)
# SENTRY_DSN=https://your-sentry-dsn
